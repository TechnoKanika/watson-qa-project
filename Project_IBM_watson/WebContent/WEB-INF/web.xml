    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
		<servlet-name>UploadFile1</servlet-name>
		<servlet-class>UploadFile1</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UploadFile1</servlet-name>
		<url-pattern>/UploadFile1</url-pattern>
	</servlet-mapping>
</web-app>